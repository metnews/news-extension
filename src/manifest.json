{
	"name": "MetNews",
	"description": "Your personal search engine, with bookmark management, full text search and feed auto discovery.",
	"version": "1.0.1",
	"manifest_version": 3,
	"homepage_url": "https://metnews.co",
	"icons": {
		"512": "./icons/icon.png"
	},
	"permissions": [
		"activeTab",
		"tabs"
	],
	"host_permissions": [
		"http://127.0.0.1/*",
		"http://localhost/*",
		"https://*.metnews.co/*"
	],
	"background": {
		"service_worker": "./dist/background_script.js",
		"type": "module"
	},
	"action": {
		"browser_style": true,
		"default_title": "MetNews",
		"default_icon": {
			"512": "./icons/icon.png"
		}
	},
	"content_scripts": [
		{
			"all_frames": false,
			"js": [
				"./dist/content_script.js"
			],
			"css": [],
			"matches": [
				"*://*/*"
			],
			"run_at": "document_idle"
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"icons_active/*.png",
				"icons_normal/*.png"
			],
			"matches": [
				"*://*/*"
			]
		}
	]
}